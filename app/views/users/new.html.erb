
<% provide(:title, 'Sign up') %>
<% if(@user.errors.any?) %>
  <div class="alert alert--wide">
    <%= @user.errors.full_messages.join('<br />').html_safe %>
  </div>
<% end %>
<div class="d-flex flex-column align-items-center">
  <h1 class="" >Sign up</h1>
  <div class="signUpForm row justify-content-center border border-info rounded-3 bg-light">
    <div class="signUpFormContent col-md-6 col-md-offset-3 p-4">
      <%= form_with(model: @user, local: true, class: "row g-3") do |f| %>
      <%= render partial: 'shared/error_messages', locals: { model: @user } %>
      <div class="col-md-6">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-12">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="col-12">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="col-12">
        <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="col-12">
        <%= f.submit "Create my account", class: "btn btn-primary" %> <% end %>
      </div>
    </div>
  </div>
</div>
