<% provide(:title, 'Sign up') %> <h1>Sign up</h1>
<div class="row m-5 w-75 d-flex justify-content-center border border-info rounded-3 bg-light">
  <div class="col-md-6 col-md-offset-3 w-50 p-4">
  <%= form_with(model: @user, local: true, class: "row g-3") do |f| %>
  <div class="col-md-6">
  <%= f.label :first_name, class: "form-label" %>
  <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="col-md-6">
  <%= f.label :last_name, class: "form-label" %>
  <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="col-12">
  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="col-12">
  <%= f.label :password, class: "form-label" %>
  <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="col-12">
  <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="col-12">
  <%= f.submit "Create my account", class: "btn btn-primary" %> <% end %>
  </div>
  </div>
</div>
